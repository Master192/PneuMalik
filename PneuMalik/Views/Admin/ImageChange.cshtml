@using PneuMalik.Models
@model MultipleChangeViewModel

<h1>Změna obrázků</h1>

@using (Html.BeginForm("DoImageChange", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h3>Nastavení pravidel pro změnu obrázků</h3>
    <div class="form-horizontal">
        <div class="form-group">
            Výrobce:
            <select style="width: initial; display: initial;" class="form-control" id="sezona" name="sezona">
            @for (var i = 0; i < Model.Manufacturers.Count; i++)
            {
                <option value="@{i.ToString();}}">@Model.Manufacturers[i]</option>
            }
            </select>
        </div>
        <div class="form-group">
            <input class="btn btn-default" type="submit" value="UPRAV OBRÁZKY" id="uprav-obrazky" name="uprav-obrazky" />
        </div>
    </div>
}