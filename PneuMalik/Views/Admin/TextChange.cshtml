@using PneuMalik.Models
@model MultipleChangeViewModel

<h1>Změna textů</h1>

@using (Html.BeginForm("DoTextChange", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h3>Nastavení pravidel pro změnu textů</h3>
    <div class="form-horizontal">
        <div class="form-group">
            Výrobce:
            <select style="width: initial; display: initial;" class="form-control" id="sezona" name="sezona">
                @for (var i = 0; i < Model.Manufacturers.Count; i++)
                {
                    <option value="@{i.ToString();}}">@Model.Manufacturers[i]</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input class="btn btn-default" type="submit" value="UPRAV TEXTY" id="uprav-texty" name="uprav-texty" />
        </div>
    </div>
    }