@using PneuMalik.Models

@model EshopViewModel

@{
    var product = Model.ProductDetail;
    product.VehicleType = new PneuMalik.Models.Dto.VehicleType();
    var productName = $"{product.Manufacturer.Name} {product.Pattern}";
}

<div id="stred">

    <h1>@productName</h1>

    <p><img src="/images/detail/@(product.Id).jpg" class="detimg" alt="@productName" /></p>

    <table class="tabdet">
        <tr>
            <td class="td1">Výrobce:</td>
            <td>@product.Manufacturer.Name</td>
        </tr>
        <tr>
            <td class="td1">Dezén:</td>
            <td>@product.Pattern</td>
        </tr>
        <tr>
            <td class="td1">Šířka:</td>
            <td>@product.Width</td>
        </tr>
        <tr>
            <td class="td1">Série - výška:</td>
            <td>@product.SerieWidth</td>
        </tr>
        <tr>
            <td class="td1">Konstrukce:</td>
            <td>@product.Construction</td>
        </tr>
        <tr>
            <td class="td1">Průměr ráfku:</td>
            <td>@product.Diameter</td>
        </tr>
    </table>
    <div class="det">
        <p class="detinfo">
            <ins><img src="/img/vehicletype/@(product.VehicleType.Id).png" alt="@product.VehicleType.Title" /></ins>
            <ins><img src="/img/seasons/@(product.Season.Id).png" alt="@product.Season.Name" /></ins>
            <ins><span style="color:#008000;"><strong>DOSTUPNOST:<br />@(product.InStock ? "SKLADEM" : "")</strong></span></ins>
        <p class="detget">
            <ins><input type="text" name="productCount" id="productCount" class="boks" value="1" /></ins>
            <ins>ks</ins>
            <ins><input type="button" onClick="toTheCart(@(product.Id), @($"{product.Price:0}"), '@(productName)');" value="Do košíku" class="enter" /></ins>
        </p>
        <table>
            <tr>
                <td valign="top" width="80">Vaše cena:</td>
                <td>
                    <input type="radio" name="gr" value="cena1" checked>&nbsp;
                    <span class="f20 blue"><strong>@($"{product.Price:F} Kč")</strong></span>
                    <span style="color:#008000;"><strong></strong></span><br />
                </td>
            </tr>
        </table>
    </div>
    <ul id="menuzal">
        <li class="none this"><a href="#menuzal" title="">Informace</a></li>
    </ul>
    <div id="zal1">
        @Html.Raw(product.Description)
        <div class="cleaner"><hr /></div>
    </div>
    <div class="cleaner"><hr /></div>
    <hr />

</div>

@Html.Partial("_Right", Model.Tips)